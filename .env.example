# 2-Stage Political Scraping Pipeline Environment Variables
# Copy this file to .env and fill in your API keys

# ====================================
# STAGE 1 - CONTENT DISCOVERY APIS
# ====================================

# SerpAPI (Google, YouTube, Twitter search results)
# Get your key from: https://serpapi.com/
SERPAPI_KEY=your_serpapi_key_here

# Brave Search API (Web search results)  
# Get your key from: https://api.search.brave.com/
BRAVE_API_KEY=your_brave_search_api_key_here

# Firecrawl API (Advanced web crawling)
# Get your key from: https://firecrawl.dev/
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# ====================================
# QUEUE SYSTEM (REDIS + CELERY)
# ====================================

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ====================================
# DATABASE (SUPABASE POSTGRESQL)
# ====================================

# Supabase Configuration
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Direct PostgreSQL connection (for asyncpg)
SUPABASE_DB_HOST=db.your-project-id.supabase.co
SUPABASE_DB_PORT=5432
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=your_supabase_db_password_here
SUPABASE_DB_NAME=postgres

# ====================================
# OPTIONAL CONFIGURATIONS
# ====================================

# Pipeline Settings
DEFAULT_STAGE1_LIMIT=50
DEFAULT_STAGE2_LIMIT=20
MAX_CONCURRENT_SCRAPERS=3

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/pipeline.log

# Rate Limiting
REQUESTS_PER_MINUTE=30
DELAY_BETWEEN_REQUESTS=2

# Browser Settings
HEADLESS_BROWSER=true
BROWSER_TIMEOUT=30